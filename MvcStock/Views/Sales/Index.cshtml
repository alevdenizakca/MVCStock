@using MvcStock.Models.Entity;
@model List<TSATISLAR>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<a class="btn btn-primary" href="/Sales/Create">Satış Yap</a>
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#Modal1">
    Önceki Satışları Gör
</button>
<div class="modal" id="Modal1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header" style="display:flex; justify-content:space-between">
                <h2 class="modal-title">Önceki Satışlar</h2>
                <button type="submit" class="btn btn-danger" aria-label="close" data-dismiss="modal">
                <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Ürün</th>
                            <th>Müşteri</th>
                            <th>Satılan Adet</th>
                            <th>Toplam Fiyat</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var sale in Model)
            {
                <tr>
                    <td>@sale.TURUNLER.URUNAD</td>
                    <td>@(sale.TMUSTERILER.MUSTERIAD+" "+sale.TMUSTERILER.MUSTERISOYAD)</td>
                    <td>@sale.ADET</td>
                    <td>@sale.FIYAT</td>
                </tr>
            }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

