@model MvcStock.Models.Entity.TURUNLER
@{
    ViewBag.Title = "BringProduct";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@using (Html.BeginForm("Update", "Product", FormMethod.Post))
{
    <div style="display:none">
        @Html.TextBoxFor(m=>m.URUNID)
    </div>
<div>
    <label>Ürün Adı</label>
    @Html.TextBoxFor(m => m.URUNAD, new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.URUNAD, "", new {@style="color:red"})
</div>
<div>
    <label>Marka</label>
    @Html.TextBoxFor(m => m.MARKA, new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.MARKA, "", new { @style = "color:red" })
</div>
<div>
    <label>Kategori Seçiniz</label>
    @Html.DropDownListFor(m=>m.TKATEGORILER.KATEGORIID,(List<SelectListItem>)ViewBag.degerler, new {@class= "form-control" })
    @Html.ValidationMessageFor(m => m.URUNKATEGORI, "", new { @style = "color:red" })
</div>
<div>
    <label>Fiyat</label>
    @Html.TextBoxFor(m => m.FIYAT, new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.FIYAT, "", new { @style = "color:red" })
</div>
<div>
    <label>Stok Adeti</label>
    @Html.TextBoxFor(m => m.STOK, new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.STOK, "", new { @style = "color:red" })
</div>
<button style="margin-top:15px" class="btn btn-success">Güncelle</button>
}

